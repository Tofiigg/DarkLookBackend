@model BrandLogo
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <img style="max-width:100%" src="~/images/brand/@Model.Image" alt="Alternate Text" />
        </li>
    </ul>
</div>
<form method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="@Model.File"></label>
        <input class="form-control" accept="image/*" asp-for="@Model.File">
        <span class="alert-danger" asp-validation-for="@Model.File"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

