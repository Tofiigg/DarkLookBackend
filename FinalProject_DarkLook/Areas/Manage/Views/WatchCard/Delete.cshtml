@model WatchCard 
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>
<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <img style="max-width:100%"src="~/images/product/@Model.Image" alt="Alternate Text" />
        </li>
        <li class="list-group-item">Id: @Model.Id</li>
        <li class="list-group-item">Desc:@Model.Desc</li>
        <li class="list-group-item">DealsOFWeek: @Model.IsDealsOftheWeek</li>
        <li class="list-group-item">Arrivial: @Model.IsNewArrivals</li>
        <li class="list-group-item">BestSeller: @Model.IsBestSeller</li>
        <li class="list-group-item">Featured: @Model.IsFeatured</li>

    </ul>

    <a class="btn btn-primary" asp-action="Index">Go List</a>
    <h1>Silmek Isdediynize Eminsinizmi:</h1>
    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>

