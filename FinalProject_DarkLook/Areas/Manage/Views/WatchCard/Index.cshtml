@model ICollection<WatchCard> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
<h1 class="h3 mb-4 text-gray-800">OurTeam Page</h1>


    <div class="d-flex justify-content-end mb-2">
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">HoverImgae</th>
            <th scope="col">Desc</th>

            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WatchCard watch in Model)
        {
        <tr>
            <th scope="row">@watch.Id</th>
            <td>
                <img style=" border-radius: 100%; object-fit: cover; width: 125px; height: 124px; " src="~/images/product/@watch.Image" alt="Alternate Text" />
            </td>
            <td>
                <img style="width:200px; height:200px; "src="~/images/product/@watch.HoverImage" alt="Alternate Text" />
            </td>
            <td>@watch.Desc</td>
            <td>
                <a class="btn btn--primary" asp-action="Detail" asp-route-Id="@watch.Id">Detail</a>
                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@watch.Id">Update</a>
                <a class=" btn btn-danger" asp-action="Delete" asp-route-Id="@watch.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>



<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">

            @if (ViewBag.Seltectedpage != 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-route-page="@(ViewBag.Seltectedpage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>

            }

            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                <li class="page-item @(i==ViewBag.Seltectedpage?"active":"")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>

            }



            @if (ViewBag.Seltectedpage < ViewBag.TotalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="index" asp-route-page="@(ViewBag.Seltectedpage+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            }
        </ul>
</nav>
</div>