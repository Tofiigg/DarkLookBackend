@model ICollection<OurTeam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">OurTeam Page</h1>

@if (Model.Count < 5)
{
    <div class="d-flex justify-content-end mb-2">
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Profession</th>

            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (OurTeam team in Model)
        {
            <tr>
                <th scope="row">@team.Id</th>
                <td>
                    <img style=" border-radius: 100%; object-fit: cover; width: 125px; height: 124px;" src="~/images/@team.Image" alt="Alternate Text" />
                </td>
                <td>@team.Name</td>
                <td>@team.Profession</td>
                <td>
                    <a class="btn btn--primary" asp-action="Detail" asp-route-Id="@team.Id">Detail</a>
                    <a class="btn btn-warning" asp-action="Update" asp-route-Id="@team.Id">Update</a>
                    <a class=" btn btn-danger" asp-action="Delete" asp-route-Id="@team.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
