@model ICollection<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Category Page</h1>

@if (Model.Count < 12)
{
    <div class="d-flex justify-content-end mb-2">
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model)
        {
            <tr>
                <th scope="row">@category.Id</th>
                <td>@category.Name</td>

                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-route-Id="@category.Id">Update</a>
                    <a class=" btn btn-danger" asp-action="Delete" asp-route-Id="@category.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


