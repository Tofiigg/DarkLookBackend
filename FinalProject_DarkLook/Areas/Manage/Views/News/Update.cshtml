@model News
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <img style="max-width:100%" src="~/images/blog/@Model.Image" alt="Alternate Text" />
        </li>
    </ul>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="@Model.Title"></label>
        <input class="form-control" asp-for="@Model.Title">
        <span class="alert-danger" asp-validation-for="@Model.Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Desc"></label>
        <input class="form-control" asp-for="@Model.Desc">
        <span class="alert-danger" asp-validation-for="@Model.Desc"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Day"></label>
        <input class="form-control" asp-for="@Model.Day">
        <span class="alert-danger" asp-validation-for="@Model.Day"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Month"></label>
        <input class="form-control" asp-for="@Model.Month">
        <span class="alert-danger" asp-validation-for="@Model.Month"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Info"></label>
        <input class="form-control" asp-for="@Model.Info">
        <span class="alert-danger" asp-validation-for="@Model.Info"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.RedInfo"></label>
        <input class="form-control" asp-for="@Model.RedInfo">
        <span class="alert-danger" asp-validation-for="@Model.RedInfo"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.SingleDesc"></label>
        <input class="form-control" asp-for="@Model.SingleDesc">
        <span class="alert-danger" asp-validation-for="@Model.SingleDesc"></span>
    </div>

    <div class="mb-3">
            <label asp-for="@Model.File"></label>
            <input class="form-control" accept="image/*" asp-for="@Model.File">
            <span class="alert-danger" asp-validation-for="@Model.File"></span>
        </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

