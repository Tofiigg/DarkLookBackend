@model ICollection<Setting>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Setting Page</h1>

@if (Model.Count < 1)
{
    <div class="d-flex justify-content-end mb-2">
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">WorkTime</th>
            <th scope="col">FacebookUrl</th>
            <th scope="col">Address</th>

            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Setting setting in Model)
        {
        <tr>
            <th scope="row">@setting.Id</th>
            <td>
                <img style=" border-radius: 100%; object-fit: cover; width: 125px; height: 124px;" src="~/images/@setting.Logo" alt="Alternate Text" />
            </td>
            <td>@setting.WorkTimeDesc</td>
            <td>@setting.FacebookUrl</td>
            <td>@setting.Adress</td>

            <td>
                <a class="btn btn--primary" asp-action="Detail" asp-route-Id="@setting.Id">Detail</a>
                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@setting.Id">Update</a>
                <a class=" btn btn-danger" asp-action="Delete" asp-route-Id="@setting.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
