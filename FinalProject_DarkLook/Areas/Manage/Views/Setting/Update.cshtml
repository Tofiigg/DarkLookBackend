@model Setting
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <img style="max-width:100%" src="~/images/@Model.Logo" alt="Alternate Text" />
        </li>
    </ul>
</div>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Adress"></label>
        <input class="form-control" asp-for="Adress">
        <span class="alert-danger" asp-validation-for="Adress"></span>
    </div>
    <div class="mb-3">
        <label asp-for="WorkTimeDesc"></label>
        <input class="form-control" asp-for="WorkTimeDesc">
        <span class="alert-danger" asp-validation-for="WorkTimeDesc"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Street"></label>
        <input class="form-control" asp-for="@Model.Street">
        <span class="alert-danger" asp-validation-for="@Model.Street"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Number"></label>
        <input class="form-control" asp-for="@Model.Number">
        <span class="alert-danger" asp-validation-for="@Model.Number"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Email"></label>
        <input class="form-control" asp-for="@Model.Email">
        <span class="alert-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.FacebookUrl"></label>
        <input class="form-control" asp-for="@Model.FacebookUrl">
        <span class="alert-danger" asp-validation-for="@Model.FacebookUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.WebUrl"></label>
        <input class="form-control" asp-for="@Model.WebUrl">
        <span class="alert-danger" asp-validation-for="@Model.WebUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Twitter"></label>
        <input class="form-control" asp-for="@Model.Twitter">
        <span class="alert-danger" asp-validation-for="@Model.Twitter"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LinkUrl"></label>
        <input class="form-control" asp-for="@Model.LinkUrl''">
        <span class="alert-danger" asp-validation-for="@Model.LinkUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.LastUrl"></label>
        <input class="form-control" asp-for="@Model.LastUrl''">
        <span class="alert-danger" asp-validation-for="@Model.LastUrl"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.GoogleUrl"></label>
        <input class="form-control" asp-for="@Model.GoogleUrl''">
        <span class="alert-danger" asp-validation-for="@Model.GoogleUrl"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.File"></label>
        <input class="form-control" accept="image/*" asp-for="@Model.File">
        <span class="alert-danger" asp-validation-for="@Model.File"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

