@model ICollection<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Contact </h1>

@if (Model.Count < 1)
{
    <div class="d-flex justify-content-end mb-2">
        <a class="btn btn-primary" asp-action="Create">Create</a>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Location</th>
            <th scope="col">Number</th>
            <th scope="col">Careers</th>
            <th scope="col">Email</th>
            <th scope="col">SayHello</th>
            <th scope="col">InfoEmail</th>

            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact conact in Model)
        {
        <tr>
            <th scope="row">@conact.Id</th>

            <td>@conact.Location</td>
            <td>@conact.Number</td>
            <td>@conact.Careers</td>
            <td>@conact.Email</td>
            <td>@conact.SayHello</td>
            <td>@conact.InfoEmail</td>


            <td>
                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@conact.Id">Update</a>
                <a class=" btn btn-danger" asp-action="Delete" asp-route-Id="@conact.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

